<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="swatch_image" type="swatch_image">
                <width>50</width>
                <height>50</height>
            </image>
            <image id="swatch_thumb" type="swatch_thumb">
                <width>140</width>
                <height>140</height>
            </image>
            <image id="swatch_image_base" type="swatch_image">
                <width>50</width>
                <height>50</height>
            </image>
            <image id="swatch_thumb_base" type="swatch_thumb">
                <width>140</width>
                <height>140</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="breakpoints">
            <var name="tablet">
                <var name="conditions">
                    <var name="max-width">1024px</var>
                </var>
                <var name="options">
                    <var name="options">
                        <var name="nav">thumbs</var>
                        <var name="navdir">horizontal</var>
                    </var>
                </var>
            </var>
        </var>
    </vars>
    <vars module="Argento_Theme">
        <var name="sticky_add_to_cart">
            <var name="enabled">1</var>
        </var>
        <var name="photo_in_description">
            <var name="image_class">argento-float-photo</var>
            <var name="add_classes">hidden-xs</var> <!-- hide on mobile screens -->
            <var name="target">#product\\.info\\.description[data-role=content]</var>
        </var>
    </vars>
</view>
